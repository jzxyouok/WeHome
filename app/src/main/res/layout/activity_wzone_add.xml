<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/wzoneImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:minHeight="100dp"
            android:minWidth="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/family_photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间："
                android:textColor="@color/black_tag_3"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-10-3"
                android:textColor="@color/black_tag_3"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建人："
                android:textColor="@color/black_tag_3"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/buildOfText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="咔咔 | 爸爸"
                android:textColor="@color/black_tag_3"
                android:textSize="17sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/contentEdit"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_rounded_rect"
            android:gravity="left|top"
            android:hint="内容："
            android:textColor="@color/black_tag_3"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:singleLine="false" />

        <com.zhaoxuan.wehome.view.widget.softwidget.SRoundRect_Button
            android:id="@+id/addBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="增加"
            android:textColor="@color/white_tag_1"
            android:textSize="20sp"
            app:backgroundColor="@color/red_tag_6" />

    </LinearLayout>


</ScrollView>
