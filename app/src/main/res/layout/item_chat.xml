<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin">

    <RelativeLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhaoxuan.wehome.view.widget.Round_ImageView
            android:id="@+id/headImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="3dp"
            android:src="@drawable/t_head" />



        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/headImg"
            android:layout_alignTop="@id/headImg"
            android:layout_alignBottom="@id/headImg"
            android:layout_alignBaseline="@id/headImg"
            android:text="Info"
            android:textColor="@color/black_tag_1"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/contentText"
            android:layout_below="@id/headImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cheese_ipsum" />

        <ImageView
            android:id="@+id/chatImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contentText"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/t_head"/>

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray_tag_6"
            android:text="3-13"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>