<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rounded_rect"
    android:padding="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/wishImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="@drawable/family_photo"/>
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/wishImg"
        android:layout_alignTop="@id/wishImg"
        android:layout_margin="3dp"
        android:textSize="16sp"
        android:textColor="@color/black_tag_3"
        android:text="这是计划的标题哦~很长很长很长很长很长很长很长很长很长很长的标题哦~"/>

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/wishImg"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"
        android:textColor="@color/black_tag_3"
        android:text="2015-11-27"/>
</RelativeLayout>