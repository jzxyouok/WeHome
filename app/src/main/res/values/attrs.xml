<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- softView（提前绘制View）自定义属性    for 李兆轩  2015.8.12-->
    <!-- SRoundRect_Button 圆角矩形Button 有边框-->
    <declare-styleable name="SRoundRect_Button">
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:alpha"/>
        <attr name="android:background"/>
        <attr name="backgroundPic" format="reference"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="border" format="boolean"/>
        <attr name="corners" format="integer"/>
    </declare-styleable>
    <!-- SRoundRect_LinearLayout 圆角矩形Layout-->
    <declare-styleable name="SRoundRect_LinearLayout">
        <attr name="bgcolor" format="color"/>
    </declare-styleable>
    <!-- 空数据提示控件-->
    <declare-styleable name="NoDataTipsView">
        <attr name="android:text" />
        <attr name="android:src" />
    </declare-styleable>
    <!-- Image_EditText 带图片的输入框 -->
    <declare-styleable name="ImageEditText">
        <attr name="android:text" />
        <attr name="android:src" />
        <attr name="android:hint" />
        <attr name="android:inputType"/>
    </declare-styleable>
    <!-- ImageText_Label 侧滑菜单标签-->
    <declare-styleable name="ImageTextLabel">
        <attr name="android:text" />
        <attr name="android:src" />
    </declare-styleable>
    <!-- ValueSetLabel 设置界面属性设置item-->
    <declare-styleable name="ValueSetLabel">
        <attr name="setValueKeyIcon" format="reference"/>
        <attr name="setValueKeyText" format="string"/>
        <attr name="setValueValueIcon" format="reference"/>
        <attr name="setValueValueText" format="string"/>
    </declare-styleable>


</resources>