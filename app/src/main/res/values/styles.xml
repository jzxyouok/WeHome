<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AnimationFade">
        <!-- PopupWindow左右弹出的效果-->
        <item name="android:windowEnterAnimation">@anim/out_top_to_down</item>
        <item name="android:windowExitAnimation">@anim/in_down_to_top</item>
    </style>

    <!-- Widget Style（组件的风格样式) -->
    <!-- Widget:ActionBar Style（ActionBar组件的风格样式) -->

    <style name="ActionBar.Solid.Style" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/red_tag_4</item>
        <item name="android:backgroundStacked">@color/white_tag_1</item>
        <item name="android:backgroundSplit">@color/white_tag_1</item>
        <item name="android:titleTextStyle">@style/ActionBar.Solid.Title.Text.Style</item>
    </style>
    
    <style name="ActionBar.Solid.Title.Text.Style" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--ToolBar 风格-->


    <!-- Widget:ActionBar Style end -->

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
