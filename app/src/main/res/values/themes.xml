<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application Theme -->
    <style name="AppTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@color/gray_tag_1</item>

        <item name="android:actionBarStyle">@style/ActionBar.Solid.Style</item>
        <item name="android:homeAsUpIndicator">@drawable/actionbar_left_btn_layer</item>
    </style>

    <!-- LoginActivity Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white_tag_1</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/red_tag_6</item>
        <item name="colorPrimaryDark">@color/red_tag_4</item>
    </style>

</resources>